{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile"
  },
  "deploy": {
    "startCommand": "chmod +x ./railway/generate-env.sh && chmod +x ./railway/test-db-connection.sh && chmod +x ./railway/init-app.sh && sh ./railway/init-app.sh && apache2-foreground",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}

