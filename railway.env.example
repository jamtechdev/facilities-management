# Railway Environment Variables Template
# Copy these to Railway dashboard â†’ Variables tab
# Replace values as needed

APP_NAME="Facilities Management"
APP_ENV=production
APP_KEY=base64:YOUR_GENERATED_KEY_HERE
APP_DEBUG=false
APP_URL=https://your-app-name.up.railway.app

LOG_CHANNEL=stack
LOG_LEVEL=error

# Database - Option 1: Use Railway's template variables (RECOMMENDED)
# First, link MySQL service to your app service in Railway dashboard
# Then use these template variables:
DB_CONNECTION=mysql
DB_HOST=${{MySQL.MYSQLHOST}}
DB_PORT=${{MySQL.MYSQLPORT}}
DB_DATABASE=${{MySQL.MYSQLDATABASE}}
DB_USERNAME=${{MySQL.MYSQLUSER}}
DB_PASSWORD=${{MySQL.MYSQLPASSWORD}}

# Database - Option 2: Use direct values (if template variables don't work)
# Use the PUBLIC hostname from Railway MySQL service
# DB_CONNECTION=mysql
# DB_HOST=centerbeam.proxy.rlwy.net
# DB_PORT=28953
# DB_DATABASE=railway
# DB_USERNAME=root
# DB_PASSWORD=AgcaHrPGJfJfqrtrHJTdJkiLstVSHrUf

# Cache & Sessions
BROADCAST_CONNECTION=log
CACHE_STORE=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=database
SESSION_LIFETIME=120

# Mail Configuration (Update with your SMTP settings)
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=your_username
MAIL_PASSWORD=your_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@yourdomain.com"
MAIL_FROM_NAME="${APP_NAME}"

# Timezone
APP_TIMEZONE=UTC

# Additional Laravel Settings
TELESCOPE_ENABLED=false
PULSE_ENABLED=false

